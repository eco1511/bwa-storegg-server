<%- include ../../partial/header.ejs %>
<%- include ../../partial/navbar.ejs %>
<%- include ../../partial/sidebar.ejs %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Bank</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active"><a href="/bank">Bank</a></li>
              <li class="breadcrumb-item active">Tambah</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <div class="card card-primary">
                  <div class="card-header">
                    <h3 class="card-title">Form Ubah Bank "<%= bank.name %>"</h3>
                  </div>
                  <form action="/bank/edit/<%= bank._id %>?_method=PUT" method="POST">
                    <div class="card-body">
                      <div class="form-group">
                        <label for="name">Nama</label>
                        <input value="<%= bank.name %>" type="text" name="name" class="form-control" id="name" placeholder="Masukan Nama" required>
                      </div>
                      <div class="form-group">
                        <label for="nameBank">Nama Bank</label>
                        <input value="<%= bank.nameBank %>" type="text" name="nameBank" class="form-control" id="nameBank" placeholder="Masukan Nama Bank" required>
                      </div>
                      <div class="form-group">
                        <label for="noRekening">No. Rekening</label>
                        <input value="<%= bank.noRekening %>" type="text" name="noRekening" class="form-control" id="noRekening" placeholder="Masukan No. Rekening" required>
                      </div>
                    </div>
                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary">Simpan</button>
                    </div>
                  </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- /.content -->
</div>
<%- include ../../partial/footer.ejs %>
<%- include ../../partial/js.ejs %>