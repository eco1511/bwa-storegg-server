<%- include ../../partial/header.ejs %>
<%- include ../../partial/navbar.ejs %>
<%- include ../../partial/sidebar.ejs %>
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Detail Transaksi "
              <% if(transaction.status === 'pending') { %>
                <span class="badge badge-warning">
                   <%= transaction.status %>
                </span>
              <% }else if(transaction.status === 'success') { %>
                <span class="badge badge-success">
                    <%= transaction.status %>
                </span>
              <% }else { %>
                <span class="badge badge-danger">
                    <%= transaction.status %>
                </span>
              <% } %>    
              "</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
              <li class="breadcrumb-item"><a href="/transaction">Transaksi</a></li>
              <li class="breadcrumb-item active">Detail</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <!-- Main content -->
            <div class="invoice p-2 mb-2">
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                  <address>
                    <strong><%= transaction.player.name %></strong><br>
                    Email: <%= transaction.player.email %><br>
                    Phone: <%= transaction.player.phoneNumber %><br>
                  </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                  <b>Invoice #<%= transaction._id %></b><br>
                  <br>
                  <b>Tanggal : </b><%= transaction.createdAt %><br>
                  <b>Account : </b> <%= transaction.accountUser %>
                </div>
                <!-- /.col -->
              </div>
              <!-- /.row -->
              <!-- Table row -->
              <div class="row">
                <div class="col-12 table-responsive">
                  <table class="table table-striped">
                    <thead>
                    <tr>
                      <th>Nama Game</th>
                      <th>Kategori</th>
                      <th>Voucher</th>
                      <th>Subtotal</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                      <td><%= transaction.historyVoucherTopup.gameName %></td>
                      <td><%= transaction.historyVoucherTopup.category %></td>
                      <td><%= transaction.historyVoucherTopup.coinName %> - <%= transaction.historyVoucherTopup.coinQuantity %></td>
                      <td>Rp. <%= transaction.historyVoucherTopup.price %></td>
                    </tr>
                    </tbody>
                  </table>
                </div>
                <!-- /.col -->
              </div>
              <!-- /.row -->

              <div class="row">
                <!-- /.col -->
                <div class="col-6">

                  <div class="table-responsive">
                    <table class="table">
                      <tr>
                        <th style="width:50%">Subtotal:</th>
                        <td>Rp. <%= transaction.historyVoucherTopup.price %></td>
                      </tr>
                      <tr>
                        <th>Tax (10%)</th>
                        <td>Rp. <%= transaction.tax %></td>
                      </tr>
                      <tr>
                        <th>Total:</th>
                        <td>Rp. <%= transaction.value %></td>
                      </tr>
                    </table>
                  </div>
                </div>
                <!-- /.col -->
              </div>
              <!-- /.row -->

              <!-- this row will not appear when printing -->
              <div class="row no-print">
                <div class="col-12">
                  <a href="" rel="noopener" target="_blank" class="btn btn-default" onClick="window.print();" ><i class="fas fa-print"></i> Print</a>
                </div>
              </div>
            </div>
            <!-- /.invoice -->
          </div><!-- /.col -->
        </div><!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <%- include ../../partial/footer.ejs %>
  <%- include ../../partial/js.ejs %>
